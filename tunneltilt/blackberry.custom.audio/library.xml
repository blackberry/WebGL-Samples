<library>
	<extension id="blackberry.custom.audio">
		<entryClass>blackberry.custom.audio.CustomAudio</entryClass>
	</extension>
	<platforms>
		<platform value="AIR">
			<target version="default" config="AIR_XHR" />
		</platform>
	</platforms>
	
	<configurations>
		<configuration name="AIR_XHR" version="1.0" comment="For XHR architecture for implementation">
			<src type="text/javascript" path="js/common/custom_audio_dispatcher.js" comment="Application JS XHR interface" />
			<src type="text/javascript" path="js/common/custom_audio_ns.js" comment="Application JS interface" />
			<src type="text/actionscript" path="src/Air/CustomAudio/src" comment="ActionScript implementation" />
		</configuration>
	</configurations>
	<features>
		<feature id="blackberry.custom.audio" version="1.0.0" />
	</features>
	<!-- 
		Sample Usage to play a file:
		
		function playFile(filePath) {
		  try {
		    blackberry.custom.audio.playFile(filePath);
		  } catch(e) {
		    alert("Exception in customAudio: " + e);
		  }
		}
	-->
</library>
